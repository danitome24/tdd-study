# Copy this file to behat.yml
# $ cp behat.yml.dist behat.yml

default:
    autoload:
        '': '%paths.base%/design' # autoload for behat things
    suites:
        default:
            paths:
                - 'design/Features' # This is where you will put your *.feature files
            contexts:
                - App\Design\Contexts\DemoContext # This is where you will put your contexts
    extensions:
        FriendsOfBehat\SymfonyExtension: { }
